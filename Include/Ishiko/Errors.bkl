setting ISHIKO_ERRORS_ROOT
{
    help = "Path to the Ishiko Errors installation";
    default = '$(ISHIKO)/Errors';
}

template IshikoErrors
{
    includedirs += $(ISHIKO_ERRORS_ROOT)/Include;

    if ($(toolset) == gnu)
    {
        libdirs += $(ISHIKO_ERRORS_ROOT)/Lib;
    }

    if ($(toolset) != gnu)
    {
        libdirs += $(ISHIKO_ERRORS_ROOT)/Lib/$(arch);
    }
}
